# Replace with your published image
IMAGE=ghcr.io/hamster1963/nextme2:latest

# Host port
PORT=3052

# Required secrets in production
PAYLOAD_SECRET=replace-with-a-secure-secret
PREVIEW_SECRET=replace-with-a-secure-secret

# SQLite path in container
DATABASE_URI=file:/app/data/payload.db

# Auto-create/update SQLite schema on startup
PAYLOAD_DB_PUSH=true

# Blog query controls
PAYLOADCMS_COLLECTION=posts
PAYLOADCMS_DEPTH=2
PAYLOADCMS_PAGE_SIZE=100
PAYLOADCMS_INCLUDE_DRAFT=false
